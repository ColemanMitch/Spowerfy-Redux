{
  "compilerOptions": { /* Docs: https://www.typescriptlang.org/tsconfig */
    "target": "es5",
    "module": "commonjs",
    "outDir": "bin",
    "strict": true,
    "noImplicitAny": false,
    "strictNullChecks": true,
    "checkJs": true,
    "allowJs": true,
    "moduleResolution": "node",
    "types": [
      "node",
      "jest"
    ],
    "lib": [
      "es6"
    ],
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "allowUnreachableCode": true
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.js",
    "cypress/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "<node_internals>/**",
  ]
}
